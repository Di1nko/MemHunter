<Window x:Class="course_work.MainGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:course_work"
        mc:Ignorable="d"
        Title="Training" Height="615" Width="600" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Canvas Name ="Main_Can" Focusable ="True" Background = "Black" KeyDown="OnKeyDown" KeyUp ="OnKeyUp" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Rectangle Name ="player" Height="50" Width ="60" Fill="Yellow" Canvas.Left="300" Canvas.Top="500"/>

        <Label Name ="scoreText" Content =" Score: 0" FontSize ="18" FontWeight ="Bold" Foreground="White"/>
        <Label Name ="damageText" Content =" Damage: 0" FontSize ="18" FontWeight ="Bold" Foreground="White" Canvas.Left="480" Canvas.Top="10"/>

    </Canvas>
</Window>
